

<h1>*** Edit Transaction ***</h1>

<div class="container" >
  <form class="vertical" action="/transactions/<%= @transaction.id %>/update" method="POST">

    <label for="merchant-select">Merchant:</label>
    <select name="merchant_id" id="merchant-select">
      <% for merchant in @merchants %>
        <option <%= "selected" if @transaction.merchant_id == merchant.id%>
          value="<%= merchant.id %>"><%= merchant.name %></option>
      <% end %>
    </select>

    <label for="tag-select">Tag:</label>
    <select name="tag_id" id="tag-select">
      <% for tag in @tags %>
      <option <%= "selected" if @transaction.tag_id == tag.id%>
        value="<%= tag.id %>"><%= tag.name %></option>
      <% end %>
    </select>

    <label for="description">Description:</label>
    <input required value = "<%= @transaction.description %>"type="text" id="decription" name="description">

    <label for="amount">Amount:</label>
    <input required value = "<%= @transaction.amount %>" type="number" id="amount" name="amount">

    <input type="submit" value="Add Transaction">

  </form>

</div>
